{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main>
    {{> title data="Excursion : " big=true}}
    <br>
    {{#with program.excursion}}
    <section>
        <h2>{{name}} </h2>
        {{#with location}}
        <br />
        <hr />
        <b>Location : </b> <i>{{city}}, {{country}}</i>
        <br><br>
        {{/with}}
        <b>Date : </b> <i>{{date}}</i>
    </section>
    <hr />
    <section>
        <ins> {{> title data="Program : " big=false}} </ins>
        {{#with program.[0]}}
        <b>Event title name : </b> <ins><strong>{{name}}</strong></ins>
        <br><br>
        <b>Event type : </b> <ins><strong>{{type}}</strong></ins>
        <br><br>
        <b>Duration : </b> <ins><strong>{{duration}}</strong></ins>
        <br><br>
        <hr>

        {{#with details.museum}}
        <details open>
            <summary>
                <strong> Addresses :</strong>
            </summary>
            <br>
            {{#with location}}
            <ins><strong> City </strong></ins> - {{city}}, {{country}}
            <br>
            <ins><strong> Address </strong></ins> -{{address}}
            {{/with}}
        </details>
        <br>
        <hr>
        <br>
        <details open>
            <summary>
                <strong>Exhibits :</strong>
            </summary>
            {{#each exhibits}}
            <br>
            <strong>Exhibit : </strong> - <i>{{name}}</i>
            <br><br>
            <strong>Author : </strong> - <i>{{artist}}</i>
            <br><br>
            <strong>Information : </strong> - <i>{{description}}</i>
            <br><br>
            {{/each}}
            {{/with}}
            {{#with details.guide}}
            <strong>Audio Guide : </strong>
            <br>
            <strong>Title : {{name}}</strong>
            <br>
            <strong>Language : {{language}}</strong>
            <br>
            <strong>Rating : {{rating}}</strong>
            {{/with}}
        </details>
    </section>
    {{/with}}
    {{/with}}
</main>


